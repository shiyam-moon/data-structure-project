C Program: Data Structures Classification & Types
Linear data structures
 1. Array Example
#include <stdio.h>
#include <stdlib.h>


void arrayExample() {
    int arr[] = {10, 20, 30, 40, 50};
    int n = sizeof(arr) / sizeof(arr[0]);
    printf("\nArray Elements: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}


 2. Linked List Example

#include <stdio.h>
#include <stdlib.h>


struct Node {
    int data;
    struct Node* next;
};

void linkedListExample() {
    struct Node *head = NULL, *second = NULL, *third = NULL;

    
    head = (struct Node*)malloc(sizeof(struct Node));
    second = (struct Node*)malloc(sizeof(struct Node));
    third = (struct Node*)malloc(sizeof(struct Node));

    
    head->data = 1; head->next = second;
    second->data = 2; second->next = third;
    third->data = 3; third->next = NULL;

    printf("Linked List Elements: ");
    struct Node* temp = head;
    while (temp != NULL) {
        printf("%d ", temp->data);
        temp = temp->next;
    }
    printf("\n");

    
    free(head); free(second); free(third);
}


 3. Stack Example (Array Implementation)
#include <stdio.h>
#include <stdlib.h>

struct Stack {
    int items[MAX];
    int top;
};

void initStack(struct Stack* s) { s->top = -1; }

int isFull(struct Stack* s) { return s->top == MAX - 1; }
int isEmpty(struct Stack* s) { return s->top == -1; }

void push(struct Stack* s, int value) {
    if (isFull(s)) {
        printf("Stack Overflow!\n");
        return;
    }
    s->items[++(s->top)] = value;
}

int pop(struct Stack* s) {
    if (isEmpty(s)) {
        printf("Stack Underflow!\n");
        return -1;
    }
    return s->items[(s->top)--];
}

void stackExample() {
    struct Stack s;
    initStack(&s);
    push(&s, 10);
    push(&s, 20);
    push(&s, 30);

    printf("Stack Pop: %d\n", pop(&s));
}

 4. Queue Example (Array Implementation)
#include <stdio.h>
#include <stdlib.h>

struct Queue {
    int items[MAX];
    int front, rear;
};

void initQueue(struct Queue* q) { q->front = 0; q->rear = -1; }

int isQueueFull(struct Queue* q) { return q->rear == MAX - 1; }
int isQueueEmpty(struct Queue* q) { return q->front > q->rear; }

void enqueue(struct Queue* q, int value) {
    if (isQueueFull(q)) {
        printf("Queue Overflow!\n");
        return;
    }
    q->items[++(q->rear)] = value;
}

int dequeue(struct Queue* q) {
    if (isQueueEmpty(q)) {
        printf("Queue Underflow!\n");
        return -1;
    }
    return q->items[(q->front)++];
}

void queueExample() {
    struct Queue q;
    initQueue(&q);
    enqueue(&q, 5);
    enqueue(&q, 15);
    printf("Queue Dequeue: %d\n", dequeue(&q));
}
Main Function
#include <stdio.h>
#include <stdlib.h>

int main() 
{
    printf(" LINEAR DATA STRUCTURES \n");
    arrayExample();
    linkedListExample();
    stackExample();
    queueExample();
    return 0;
}       
